{
  "name": "dark_core",
  "version": "1.0.50",
  "scripts": {
    "test": "bun test --max-concurrency 1",
    "test:unit": "bun test \"src/**/*.unit.test.ts\"",
    "test:int": "bun test \"src/**/*.int.test.ts\" --max-concurrency 1",
    "test:watch": "bun test --watch --max-concurrency 1",
    "test:int:watch": "bun test \"src/**/*.int.test.ts\" --watch --max-concurrency 1",
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "build:exec": "bun build --compile src/index.ts ../prisma/schema.prisma --outfile darkcore",
    "config:export": "bun run src/index.ts config export",
    "config:print": "bun run src/index.ts config print",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.14",
    "@grotto/logysia": "^0.1.6",
    "@iarna/toml": "^2.2.5",
    "@opencode-ai/sdk": "^1.2.5",
    "@opuu/elysia-llms-txt": "^1.1.0",
    "@prisma/adapter-libsql": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "add": "^2.0.6",
    "adze": "^2.3.0",
    "bun": "^1.3.9",
    "elysia": "latest",
    "prismabox": "^1.1.26",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "bun-types": "latest",
    "prettier": "^3.8.1"
  },
  "module": "src/index.js"
}
